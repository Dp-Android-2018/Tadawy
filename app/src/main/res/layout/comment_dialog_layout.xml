<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp294w"
    android:layout_height="@dimen/dp238h"
    app:cardCornerRadius="15dp"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_sky">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="@dimen/dp267w"
            android:layout_height="@dimen/dp120h"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/comment_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="اكتب التعليق هنا"
            android:gravity="start"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/sp10"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <RatingBar
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_comment"
            app:theme="@style/RatingBar" />

        <Button
            android:id="@+id/add_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp42h"
            android:background="@android:color/white"
            android:text="اضف التعليق"
            android:textColor="@color/text_color_sky"
            android:textSize="@dimen/sp16_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rate" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>